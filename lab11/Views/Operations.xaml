<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="lab11.Views.Operations">
    <ContentPage.Content>
        <StackLayout Padding="70">
            <StackLayout Orientation="Horizontal">
                <Label Text="Valor 1:"/>
                <Editor Text="{Binding Valor1}"/>
                <Label Text="Valor 2:"/>
                <Editor Text="{Binding Valor2}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Button Text="Sumar" Command="{Binding Sumar}"/>
                <Label Text="{Binding ResultSuma}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Restar" Command="{Binding Restar}"/>
                <Label Text="{Binding ResultResta}"/>
            </StackLayout>

            <StackLayout Orientation="Horizontal">
                <Button Text="Multiplicar" Command="{Binding Multiplicar}"/>
                <Label Text="{Binding ResultMultiplicacion}"/>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Button Text="Dividir" Command="{Binding Dividir}"/>
                <Label Text="{Binding ResultDivision}"/>
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
